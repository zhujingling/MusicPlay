<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Music" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.ToolBar.Music" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionOverflowMenuStyle">@style/AppBaseActionOverflowMenuStyle</item>
        <item name="actionMenuTextColor">@color/material_blue_grey_900</item>
        <item name="android:textColor">@color/material_blue_grey_900</item>
        <item name="actionOverflowButtonStyle">@style/ActionButtonOverflowMusic</item>
    </style>
</resources>
